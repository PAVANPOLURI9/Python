def find_text_in_file(file_path, search_text):
    # Open the file in read mode
    with open(file_path, 'r') as file:
        content = file.read()

        # Check if the search text is in the file content
        if search_text in content:
            print(f"Found '{search_text}' in the file.")
        else:
            print(f"'{search_text}' not found in the file.")

# Example usage
file_path = "C:/University/me.txt"
search_text = "Pfizer"
find_text_in_file(file_path, search_text)